{
  "openapi": "3.0.0",
  "info": {
    "title": "URL Shortener API",
    "version": "1.0.0",
    "description": "API for shortening URLs and tracking analytics"
  },
  "servers": [
    {
      "url": "http://localhost:3030",
      "description": "Local Development"
    },
    {
      "url": "https://url-shortener-backend-api.vercel.app/",
      "description": "Production Server"
    }
  ],
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "statusCode": { "type": "integer" },
          "message": { "type": "string" },
          "status": { "type": "boolean" },
          "type": { "type": "string" }
        }
      },
      "Success": {
        "type": "object",
        "properties": {
          "statusCode": { "type": "integer", "example": 200 },
          "status": { "type": "boolean", "example": true },
          "message": { "type": "string" },
          "type": { "type": "string", "example": "SUCCESS" },
          "data": { "type": "object" }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "paths": {
    "/api/auth/google": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Sign in with Google",
        "description": "Click to sign in with Google. After signing in, copy the token and paste it in the 'Authorization' header in Swagger UI. [Sign in with Google (Local)](http://localhost:3030/auth/google) or [Sign in with Google (Production)](https://url-shortener-backend-api.vercel.app/auth/google)"
      }
    },


    "/api/shorten": {
      "post": {
        "tags": ["URL Shortener"],
        "summary": "Create a short URL",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["longUrl"],
                "properties": {
                  "longUrl": { "type": "string" },
                  "customAlias": { "type": "string" },
                  "topic": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Short URL created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "status": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Your short URL has been successfully created." },
                    "data": {
                      "type": "object",
                      "properties": {
                        "shortUrl": { "type": "string" },
                        "longUrl": { "type": "string" },
                        "createdAt": { "type": "string", "format": "date-time" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input or URL already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 400 },
                    "message": { "type": "string", "example": "This long URL has already been shortened for your account." },
                    "status": { "type": "boolean", "example": false },
                    "type": { "type": "string", "example": "ALREADY_EXISTS" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/shorten/{alias}": {
      "get": {
        "tags": ["URL Shortener"],
        "summary": "Get long URL from short URL",
        "parameters": [
          {
            "name": "alias",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Long URL found successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "status": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Redirecting" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "longUrl": { "type": "string" },
                        "redirectUrl": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Short URL not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 404 },
                    "message": { "type": "string", "example": "The provided short URL could not be used to find the long URL." },
                    "status": { "type": "boolean", "example": false },
                    "type": { "type": "string", "example": "DATA_NOT_FOUND" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/analytics/{alias}": {
      "get": {
        "tags": ["Analytics"],
        "summary": "Get analytics for a specific short URL",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "alias",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Analytics data found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "status": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Analytics data found for the short URL." },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalClicks": { "type": "integer" },
                        "uniqueUsers": { "type": "integer" },
                        "clicksByDate": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": { "type": "string" },
                              "clickCount": { "type": "integer" }
                            }
                          }
                        },
                        "osType": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "osName": { "type": "string" },
                              "uniqueClicks": { "type": "integer" },
                              "uniqueUsers": { "type": "integer" }
                            }
                          }
                        },
                        "deviceType": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "deviceName": { "type": "string" },
                              "uniqueClicks": { "type": "integer" },
                              "uniqueUsers": { "type": "integer" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Short URL not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/analytics/topic/{topic}": {
      "get": {
        "tags": ["Analytics"],
        "summary": "Get analytics for a specific topic",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "topic",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Topic analytics found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "status": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Analytics data successfully found for the specified topic." },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalClicks": { "type": "integer" },
                        "uniqueUsers": { "type": "integer" },
                        "clicksByDate": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": { "type": "string" },
                              "clickCount": { "type": "integer" }
                            }
                          }
                        },
                        "urls": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "shortUrl": { "type": "string" },
                              "totalClicks": { "type": "integer" },
                              "uniqueUsers": { "type": "integer" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No URLs found for topic",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/overallAnalytics/overall": {
      "get": {
        "tags": ["Analytics"],
        "summary": "Get overall analytics for authenticated user",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Overall analytics found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "status": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Analytics data successfully found for the user's short URLs." },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalUrls": { "type": "integer" },
                        "totalClicks": { "type": "integer" },
                        "uniqueUsers": { "type": "integer" },
                        "clicksByDate": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": { "type": "string" },
                              "clickCount": { "type": "integer" }
                            }
                          }
                        },
                        "osType": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "osName": { "type": "string" },
                              "uniqueClicks": { "type": "integer" },
                              "uniqueUsers": { "type": "integer" }
                            }
                          }
                        },
                        "deviceType": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "deviceName": { "type": "string" },
                              "uniqueClicks": { "type": "integer" },
                              "uniqueUsers": { "type": "integer" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No URLs found for user",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  }
}
